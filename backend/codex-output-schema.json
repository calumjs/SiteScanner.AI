{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["issues"],
  "properties": {
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "description", "source_url", "manualInstructions"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "source_url": {
            "type": "string",
            "minLength": 1
          },
          "manualInstructions": {
            "type": ["string", "null"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

